	<!-- コメント一覧 -->
				<div class="col-xs-9">
					<h2>Comments</h2>
					<table class="table table-hover table-inverse">
						<thead>
							<tr>
								<th>neme</th>
								<th>comment</th>
								<th colspan="3"></th>
							</tr>
						</thead>

						<tbody>
							<% book.book_comments.each do |book_comment| %>
								<tr id="comment-<%= book_comment.id %>">
									<td>
										<%= link_to(book_comment.user) do %>
										<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
										<%= book_comment.user.name %>
										<% end %>
									</td>
									<td><%= book_comment.comment %></td>
									<!-- コメント削除 -->
									<% if book_comment.user == current_user %>
									<td>
										<%= link_to "Destroy", book_book_comment_path(book_id:book.id, id:book_comment.id), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
									</td>
									<% end %>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>